#include <stdio.h>
#include <string.h>

int main() {
   char source[100], destination[100];
   int length;
   
   printf("Enter a string: ");
   scanf("%s", source);
   
   length = strlen(source);
   printf("Length of the string is: %d\n", length);
   
   strcpy(destination, source);
   printf("Copied string is: %s\n", destination);
   
   return 0;
}
